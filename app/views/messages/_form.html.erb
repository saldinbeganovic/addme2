<%= form_with model: @message do |form| %>


  <div class="input-group">

    <%= form.text_field :content, class:"form-control", placeholder:"Message...", autocomplete:"off", id: "chatbox", required:"required",
    oninvalid:"this.setCustomValidity('You can't send empty messages')",
     oninput:"this.setCustomValidity('')"
     %>
    <%= form.submit "Send", class:"btn btn-primary", id: "chat-btn" %>
  </div>




  <%= form.hidden_field :account_id, value: current_account.id %>
    <%= form.hidden_field :chat_id, value: chat.id %>





<% end %>
