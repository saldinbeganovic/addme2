<%= form_for @post, html:{multipart: true} do |f|%>
  <div class="form-group mb-3">
<%= f.label :image%>
<%= f.file_field :image, class:"form-control" %>
</div>
  <div class="form-group mb-3">
<%= f.label :body%>
<%= f.text_area :body, class:"form-control" %>

</div>


<div class="form-group mb-3">
<%= f.submit "Save Post", class: "btn btn-success" %>
</div>
<%end%>
