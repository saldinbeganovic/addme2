<%= form_for @post, html:{multipart: true} do |f|%>
<div class="target col-9" id="target">
</div>
  <div class="form-group mb-3 col-9">
<%= f.label :image, class:"color2"%>
<%= f.file_field :image, class:"form-control", id:"pictureInput" %>
</div>
  <div class="form-group mb-3 col-9 bodi">
<%= f.label :body, class:"color2"%>
<%= f.text_area :body, class:"form-control", id:"textarea" %>

</div>
<script>
  $(document).on('turbolinks:load', function() {
  $(document).ready(function(){
    $("#textarea").emojioneArea({
      pickerPosition:"bottom"
    });
  });
  });
</script>

<div class="form-group mb-3">
<%= f.submit "Save Post", class: "btn btn-success" %>
</div>
<%end%>
