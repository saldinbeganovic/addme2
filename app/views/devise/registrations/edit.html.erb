<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :username, class: "mb-1" %><br />
    <%= f.text_field :username, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :first_name, class: "mb-1" %><br />
    <%= f.text_field :first_name, class: "form-control"%>
  </div>

  <div class="form-group mb-3">
    <%= f.label :last_name, class: "mb-1" %><br />
    <%= f.text_field :last_name, class: "form-control"%>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, class: "mb-1" %><br />
    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: "mb-1" %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :website, class: "mb-1" %><br />
    <%= f.text_field :website, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :password, class: "mb-1" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, class: "mb-1" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :current_password, class: "mb-1" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :image, class: "mb-1" %><br />
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
